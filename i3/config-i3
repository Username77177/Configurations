        # Цвет: Граница, фон, текст
        inactive_workspace      #2f343f #403952 #dfe6e9
        focused_workspace       #6c5cc9 #6c5ce7 #e9f1f5
        active_workspace        #000000 #000000 #ffffff
        urgent_workspacei       #ffffff #ffffff #ffffff
    }
        status_command i3status
}
